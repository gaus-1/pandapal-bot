# Шаблон переменных окружения для PandaPal Bot
# Скопируйте этот файл в .env и заполните своими значениями

# База данных PostgreSQL
# Формат: postgresql://username:password@host:port/database_name
# Для локальной разработки: postgresql://user:password@localhost:5432/pandapal_db
# Для Railway: используйте DATABASE_URL из настроек проекта
DATABASE_URL=postgresql://username:password@host:port/database_name

# Telegram Bot
# Получите токен от @BotFather в Telegram
# Инструкция: напишите /newbot в @BotFather и следуйте инструкциям
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Yandex Cloud AI
# Получите в консоли Yandex Cloud (console.cloud.yandex.ru)
# API ключ для доступа к YandexGPT, SpeechKit, Vision
# Создайте сервисный аккаунт и выдайте ему роль editor
YANDEX_CLOUD_API_KEY=your_yandex_cloud_api_key
# Folder ID в Yandex Cloud (каталог проекта)
# Находится в URL консоли: console.cloud.yandex.ru/folders/b1g...
YANDEX_CLOUD_FOLDER_ID=your_folder_id
# Модель YandexGPT: yandexgpt-lite (быстрая, дешевая) или yandexgpt (полная, дорогая)
YANDEX_GPT_MODEL=yandexgpt-lite

# Настройки генерации ответов
# Температура генерации (0.0-1.0): выше = более креативные ответы, ниже = более точные
# Рекомендуемое значение: 0.7 для баланса между креативностью и точностью
AI_TEMPERATURE=0.7
# Максимальное количество токенов в ответе
# Рекомендуемое значение: 8192 для подробных ответов
AI_MAX_TOKENS=8192
# Лимит AI запросов в минуту на пользователя
# 999999 = без ограничений (для разработки)
# Для продакшена рекомендуется: 30-60 запросов в минуту
AI_RATE_LIMIT_PER_MINUTE=999999
# Количество сообщений в истории для контекста AI
# Рекомендуемое значение: 10-20 для баланса между контекстом и производительностью
CHAT_HISTORY_LIMIT=999999

# Безопасность
# Сгенерируйте случайную строку минимум 32 символа
# Используется для сессий и шифрования
# Можно сгенерировать: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here

# Мониторинг ошибок (опционально)
# DSN для Sentry (оставьте пустым если не используете)
# Получите на sentry.io после создания проекта
SENTRY_DSN=

# Модерация контента
# Запрещенные темы через запятую для модерации
# Можно добавить свои темы, разделяя запятыми
FORBIDDEN_TOPICS=взрослый контент,нецензурная лексика,наркотики,насилие,оружие,опасные действия,незаконные действия,политика,религия,экстремизм,терроризм,обход ограничений,личные данные,буллинг,азартные игры,дискриминация,медицинские диагнозы
# Уровень строгости фильтра (1-5, где 5 - самый строгий)
# 1 = мягкая модерация, 5 = строгая модерация
# Рекомендуемое значение: 5 для максимальной защиты детей
CONTENT_FILTER_LEVEL=5

# Webhook (для продакшена на Railway/Render)
# Домен вашего приложения на Railway/Render
# Пример для Railway: your-app-name.up.railway.app
WEBHOOK_DOMAIN=your-app.railway.app
# Путь для webhook (обычно /webhook, не меняйте без необходимости)
WEBHOOK_PATH=/webhook

# Frontend
# URL фронтенд приложения
# Для продакшена: https://pandapal.ru
# Для разработки: http://localhost:5173
FRONTEND_URL=https://pandapal.ru

# Общие настройки
# Режим отладки (True для разработки, False для продакшена)
# В режиме отладки выводятся подробные логи и ошибки
DEBUG=False
# Дневной лимит сообщений на пользователя
# 999999 = без ограничений (для разработки)
# Для продакшена рекомендуется: 100-200 сообщений в день
DAILY_MESSAGE_LIMIT=999999
