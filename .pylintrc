[MASTER]
max-line-length=100
ignore=tests,scripts,alembic,venv,.venv

[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0212,  # protected-access
    C0103,  # invalid-name (для переменных типа db, app и т.д.)

[FORMAT]
max-line-length=100

[DESIGN]
max-attributes=15
max-args=10
max-branches=15
max-returns=8
max-statements=50

[IMPORTS]
load-plugins=pylint.extensions.check_annotations
